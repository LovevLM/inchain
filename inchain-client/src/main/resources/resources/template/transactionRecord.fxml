<StackPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" fx:controller="org.inchain.wallet.controllers.TransactionRecordController" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TableView style="-fx-background-color: transparent;" fx:id="table">
      	<columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
        <columns>
          <TableColumn resizable="true" sortable="false" text="状态" maxWidth="30" minWidth="30" fx:id="status"/>
          <TableColumn resizable="true" sortable="false" text="交易类型" maxWidth="60" minWidth="60" fx:id="type"/>
          <TableColumn resizable="true" sortable="false" text="交易详情" fx:id="detail"/>
          <TableColumn resizable="true" sortable="false" text="交易金额" maxWidth="100" minWidth="100" fx:id="amount"/>
          <TableColumn resizable="true" sortable="false" text="交易时间" maxWidth="130" minWidth="130" fx:id="time"/>
        </columns>
      </TableView>
   </children>
</StackPane>
